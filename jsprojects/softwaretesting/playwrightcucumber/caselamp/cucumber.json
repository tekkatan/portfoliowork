{

    "default": {
        "paths": [
            "tests/features/*.feature"
        ],
        "publishQuite":true,
        "dryRun":false,
        "require": [
            "tests/steps/*.js"
        ],
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "format": [
            [
                "html",
                "cucumber-report.html"
            ],
            "summary",
            "progress-bar",
            "json:./cucumber-report.json"
        ]
    }
}